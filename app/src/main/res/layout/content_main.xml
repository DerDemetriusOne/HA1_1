<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="171dp"
            android:layout_height="386dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/visible"

    >

        <TextView
                android:layout_width="wrap_content"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="80sp"
                android:autoSizeStepGranularity="1sp"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textSize="36sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal"
                android:id="@+id/editText" android:hint="Number 1"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberSigned|numberDecimal"
                android:id="@+id/editText2" android:hint="Number 2"/>
        <Button
                android:text="+"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_adition"/>
        <Button
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_subtac"/>
        <Button
                android:text="*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_multi"/>
        <Button
                android:text="/"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_div"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>